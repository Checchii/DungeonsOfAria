// movement inputs
global.right_key = keyboard_check(vk_right);
global.left_key = keyboard_check(vk_left);
global.up_key = keyboard_check(vk_up);
global.down_key = keyboard_check(vk_down);

// attack input
global.space_key = keyboard_check(vk_space);

// inventory input
global.inventory_key = keyboard_check(vk_tab);

// in game menu key
global.menu_key = keyboard_check(vk_escape);

// selection input
global.enter_key = keyboard_check(vk_enter);

// restart game input
global.restart_key = keyboard_check( ord( "R" ));

// interaction key
global.interaction_key = keyboard_check(ord( "E" ));